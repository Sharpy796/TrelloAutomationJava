<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:padding="32dp"
    tools:context=".MainActivity">
    <!-- title row -->
    <TextView
        android:id="@+id/title"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="24dp"
        android:layout_margin="16dp"
        android:text="Trello Card Creator" />

    <!-- name row -->
    <TextView
        android:id="@+id/namelabel"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/title"
        android:text="Name:" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_alignTop="@+id/namelabel"
        android:layout_alignBottom="@+id/namelabel"
        android:elegantTextHeight="true"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textSize="7pt"
        android:padding="16dp"
        android:layout_below="@+id/title"
        android:hint="Your Task" />

    <!-- desc row -->
    <TextView
        android:id="@+id/descriptionlabel"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/namelabel"
        android:text="Description:" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/descriptionlabel"
        android:layout_below="@+id/namelabel"
        android:layout_toEndOf="@id/descriptionlabel"
        android:elegantTextHeight="true"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textSize="7pt"
        android:padding="16dp"
        android:gravity="top"
        android:hint="Task Description" />

    <!-- lists row -->
    <TextView
        android:id="@+id/listslabel"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/description"
        android:layout_alignStart="@+id/description"
        android:text="List:" />

